<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mClRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.cricin.folivora.view.ImageView
        android:id="@+id/mIvBlackCircle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:src="@drawable/shape_circle_black"
        android:transitionName="@string/activity_options_share_element_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.cricin.folivora.view.TextView
        android:id="@+id/mTvBlackText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="share element text"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:transitionName="@string/activity_options_share_element_2"
        app:layout_constraintBottom_toBottomOf="@+id/mIvBlackCircle"
        app:layout_constraintStart_toEndOf="@+id/mIvBlackCircle"
        app:layout_constraintTop_toTopOf="@+id/mIvBlackCircle"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>